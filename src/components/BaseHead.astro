---
import { SEO } from "astro-seo";

interface Props {
  title: string;
  slug?: string;
}

const { title, slug } = Astro.props;
---

<!--SEO-->
<SEO
  charset="UTF-8"
  openGraph={{
    basic: {
      title,
      type: "article",
      image: slug
        ? new URL(`/og/${slug}.png`, Astro.url.origin).toString()
        : "",
    },
    image: {
      alt: title,
    },
  }}
/>
