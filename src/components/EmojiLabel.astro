---
import Twemoji from "./Twemoji.astro";

interface Props {
  emoji: string;
}

const { emoji } = Astro.props;
---

<div class="flex gap-2">
  <div class="flex items-center">
    <div
      class="flex justify-center items-cente w-7 h-7 bg-slate-300 rounded-md"
    >
      <Twemoji emoji={emoji} />
    </div>
  </div>
  <div class="flex text-slate-500 font-bold items-center">
    <slot />
  </div>
</div>
