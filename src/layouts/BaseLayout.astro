---
import BaseHead from "../components/BaseHead.astro";
import Footer from "../components/Footer.astro";
import LinkButton from "../components/LinkButton.astro";
---

<html lang="ja">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <BaseHead title="aaa" />
  </head>
  <div
    class="grid grid-rows-[auto_1fr_auto] grid-cols-[100%] mx-auto px-4 max-w-[1200px] min-h-screen bg-blue-100"
  >
    <img
      class="fixed right-0 w-screen"
      src="/banner.png"
      alt="banner image"
      decoding="async"
      loading="lazy"
    />
    <header class="w-full z-10">
      <nav class="flex justify-center bg-slate-100 rounded-b-xl p-4">
        <ul class="flex gap-4">
          <li>
            <LinkButton to="/">HOME</LinkButton>
          </li>
          <li>
            <LinkButton to="/">ABOUT</LinkButton>
          </li>
          <li>
            <LinkButton to="/">CONTACT</LinkButton>
          </li>
        </ul>
      </nav>
    </header>
    <main class="z-10"><slot /></main>
    <Footer class="z-10" />
  </div>
  <script></script>
</html>
